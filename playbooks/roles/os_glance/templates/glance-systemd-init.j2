{% if program_override is defined %}
{% set program_bin = "{{ program_override }}" %}
{% else %}
{% set program_bin = "/usr/local/bin/{{ program_name }}" %}
{% endif %}

[Unit]
Description=Neutron service
After=syslog.target
After=network.target

[Service]
Type=simple
User={{ system_user }}
Group={{ system_group }}
ExecStart={{ program_bin }} -- {{ program_config_options|default('') }} --log-file=/var/log/{{ service_name }}/{{ program_name }}.log
# Give a reasonable amount of time for the server to start up/shut down
TimeoutSec=300
Restart=on-failure
RestartSec=150

[Install]
WantedBy=multi-user.target
